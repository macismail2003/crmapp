<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<MessagePopover items="{path:'message>/'}"
	initiallyExpanded="true" activeTitlePress="activeTitle">
		<items >
			<MessageItem type="{message>type}" title="{message>message}" subtitle="{message>additionalText}"
            description="{message>description}" activeTitle="true" />
		</items>
	</MessagePopover>
</core:FragmentDefinition>