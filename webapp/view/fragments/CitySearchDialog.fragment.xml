<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:table="sap.ui.table" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:valuehelp="sap.ui.comp.valuehelpdialog" xmlns:fb="sap.ui.comp.filterbar">
	<Dialog contentHeight="80%" contentWidth="60%" draggable="true" showHeader="false">
		<Page title="City">
			<f:SimpleForm editable="true">
				<fb:FilterBar advancedMode="true" showGoOnFB="true" search="onSearch">
					<fb:filterGroupItems>
						<fb:FilterGroupItem groupName="City" name="City" label="City">
							<fb:control>
								<Input id="idCity" type="Text"/>
							</fb:control>
						</fb:FilterGroupItem>
						<fb:FilterGroupItem groupName="Country" name="Country" label="Country">
							<fb:control>
								<Input id="idCountry" type="Text"/>
							</fb:control>
						</fb:FilterGroupItem>
						<!--<fb:FilterGroupItem groupName="Material" name="Material" label="Material">-->
						<!--	<fb:control>-->
						<!--		<Input id="idMaterial" type="Text"/>-->
						<!--	</fb:control>-->
						<!--</fb:FilterGroupItem>-->
					</fb:filterGroupItems>
				</fb:FilterBar>
			</f:SimpleForm>
			<Panel expanded="true">
				<table:Table id="idCityTable" rows="{oSerialModel>/City}" selectionMode="Single"
					 rowSelectionChange="onPressConfirmSelectCity" visibleRowCountMode="Fixed" visibleRowCount="10">
					<table:columns>
						<table:Column>
							<Label text="City"/>
							<table:template>
								<Text text="{oSerialModel>City}" wrapping="true"/>
							</table:template>
						</table:Column>
						<table:Column>
							<Label text="Region"/>
							<table:template>
								<Text text="{oSerialModel>Region}" wrapping="true"/>
							</table:template>
						</table:Column>
						<table:Column>
							<Label text="Country"/>
							<table:template>
								<Text text="{oSerialModel>Country}" wrapping="true"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</Panel>
			<footer>
				<Toolbar>
					<ToolbarSpacer/>
					<Button press="onPressConfirmSelectCity" text="OK"></Button>
					<Button press="onPressDialogCancel" text="Cancel"></Button>
				</Toolbar>
			</footer>
		</Page>
	</Dialog>
</core:FragmentDefinition>