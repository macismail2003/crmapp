<mvc:View xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:u="sap.ui.unified" xmlns:uxap="sap.uxap"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" controllerName="com.seaco.zcrmapps.zcrmapps.controller.CreateDeal">
	<m:Page title="Leasing Deal: New">
		<ObjectPageLayout enableLazyLoading="true">
			<headerTitle>
				<ObjectPageHeader objectTitle="Opportunity Details"></ObjectPageHeader>
			</headerTitle>
			<sections>
				<ObjectPageSection id="generalData">
					<subSections>
						<ObjectPageSubSection title="General Data" mode="Expanded">
							<blocks>
								<ObjectPageLazyLoader>
									<m:VBox >
										<m:VBox>
											<f:SimpleForm minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="12"
												emptySpanL="5" emptySpanM="5" columnsL="2" columnsM="2" adjustLabelSpan="true" singleContainerFullSize="false">
												<f:content>
													<m:Label text="Type"/>
													<m:Input value="Leasing Deal" enabled="false"/>
													<m:Label text="Description"/>
													<m:Input/>
													<m:Label text="Prospect"/>
													<m:Input/>
												</f:content>
											</f:SimpleForm>
										</m:VBox>
									</m:VBox>
								</ObjectPageLazyLoader>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection title="Forecast" mode="Expanded">
							<blocks>
								<ObjectPageLazyLoader>
									<m:VBox >
										<m:VBox>
											<f:SimpleForm minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="12"
												emptySpanL="5" emptySpanM="5" columnsL="2" columnsM="2" adjustLabelSpan="true" singleContainerFullSize="false">
												<f:content>
													<m:Label text="Start Date"/>
													<m:DatePicker/>
													<m:Label text="Closing Date"/>
													<m:DatePicker/>
												</f:content>
											</f:SimpleForm>
										</m:VBox>
									</m:VBox>
								</ObjectPageLazyLoader>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection title="Sales Cycle" mode="Expanded">
							<blocks>
								<ObjectPageLazyLoader>
									<m:VBox >
										<m:VBox>
											<f:SimpleForm minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="12"
												emptySpanL="5" emptySpanM="5" columnsL="2" columnsM="2" adjustLabelSpan="true" singleContainerFullSize="false">
												<f:content>
													<m:Label text="Sales Stage"/>
													<m:Input/>
													<m:Label text="Chance of Success"/>
													<m:Input/>
													<m:Label text="Status"/>
													<m:Input/>
												</f:content>
											</f:SimpleForm>
										</m:VBox>
									</m:VBox>
								</ObjectPageLazyLoader>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="Items">
					<subSections>
						<ObjectPageSubSection class="sapUiSmallMarginTop sapUiNoContentPadding" mode="Expanded">
							<m:Table id="itemTable" items="{ path : 'dealItemModel>/Items'}">
								<m:headerToolbar>
									<m:Toolbar>
										<m:Title text="Items"/>
										<m:ToolbarSpacer/>
										<m:Button tooltip="View Settings" icon="sap-icon://add" press="onCreateItems"/>
									</m:Toolbar>
								</m:headerToolbar>
								<m:columns>
									<m:Column id="quantity">
										<m:Text text="Quantity"/>
									</m:Column>
								</m:columns>
								<m:columns>
									<m:Column >
										<m:Text text="Per Diem"/>
									</m:Column>
								</m:columns>
								<m:columns>
									<m:Column>
										<m:Text text="Daily Dpp"/>
									</m:Column>
								</m:columns>
								<m:columns>
									<m:Column>
										<m:Text text="No. of Days"/>
									</m:Column>
								</m:columns>
								<m:columns>
									<m:Column >
										<m:Text text="Unit"/>
									</m:Column>
								</m:columns>
								<m:columns>
									<m:Column >
										<m:Text text="End Date/Time"/>
									</m:Column>
								</m:columns>
								<m:columns>
									<m:Column class="sapUiTinyMarginEnd"></m:Column>
								</m:columns>
								<m:columns>
									<m:Column width="0.5rem"></m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:ObjectStatus text="{dealItemModel>Quantity}"/>
											<m:Text text="{dealItemModel>PerDiem}"/>
											<m:Text text="{dealItemModel>DailyPop}"/>
											<m:Text text="{dealItemModel>NoOfDays}"/>
											<m:Text text="{dealItemModel>Unit}"/>
											<m:Text text="{path:'dealItemModel>EndDate', type: 'sap.ui.model.type.Date'}"/>
											<core:Icon src="sap-icon://edit" press="onEditItem"/>
											<core:Icon src="sap-icon://delete" press="onDeleteItem"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
		<m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer/>
				<m:Button text="Save" press="onSave" type="Emphasized"/>
				<m:Button text="CANCEL" press="onCancel"/>
			</m:Toolbar>
		</m:footer>
	</m:Page>
</mvc:View>